<Window x:Class="Pms.Main.FrontEnd.Wpf.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Pms.Main.FrontEnd.Wpf"
        xmlns:vms="clr-namespace:Pms.Main.FrontEnd.Wpf.ViewModels"
        xmlns:views="clr-namespace:Pms.Main.FrontEnd.Wpf.Views"
        xmlns:converters="clr-namespace:Pms.Main.FrontEnd.Wpf.Converters"
        mc:Ignorable="d"
        Title="MainWindow" Height="650" Width="900"
        >
    <Window.Resources>
        <DataTemplate DataType="{x:Type vms:TimesheetViewModel}">
            <views:TimesheetPage/>
        </DataTemplate>
        <DataTemplate DataType="{x:Type vms:EmployeeViewModel}">
            <views:EmployeeUi/>
        </DataTemplate>
        <converters:CutoffToStringConverter x:Key="cutoffToStringConverter"/>
    </Window.Resources>
    <Border>
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions >
                <RowDefinition Height="75" />
                <RowDefinition Height="35" />
                <RowDefinition/>
            </Grid.RowDefinitions>

            <StackPanel Grid.Row="1" Orientation="Horizontal" Margin="8,0">
                <StackPanel Orientation="Horizontal">
                    <TextBlock  VerticalAlignment="Center" Margin="6">Cutoff Id:</TextBlock>
                    <ComboBox Name="cbPayrollDate" Text="{Binding CutoffId, UpdateSourceTrigger=PropertyChanged}" 
                              ItemsSource="{Binding CutoffIds}" 
                              Width="125" VerticalAlignment="Center" IsEditable="True"/>
                </StackPanel>
                <StackPanel Orientation="Horizontal">
                    <TextBlock  VerticalAlignment="Center" Margin="6">PayrollCode:</TextBlock>
                    <!--<TextBox Text="{Binding PayrollCode, UpdateSourceTrigger=PropertyChanged}" Width="150"/>-->
                    <ComboBox Name="cbPayrollCode" Text="{Binding PayrollCode, UpdateSourceTrigger=PropertyChanged}" 
                              ItemsSource="{Binding PayrollCodes}" 
                              Width="125" VerticalAlignment="Center" IsEditable="True"/>
                </StackPanel>
            </StackPanel>

            <DockPanel Grid.Row="1" Width="200" Height="45"
                       VerticalAlignment="Center"
                       HorizontalAlignment="Right">
                <Menu DockPanel.Dock="Top" Height="45" HorizontalAlignment="Right" Visibility="Collapsed">
                    <MenuItem Style="{StaticResource ProfileMenuItemTheme}">
                        <MenuItem.Header>
                            <StackPanel Orientation="Horizontal">
                                <TextBlock x:Name="tbProfile" HorizontalAlignment="Right" Text="Fernandez, Sean Ivan M."  VerticalAlignment="Center"/>
                                <Image Source="Assets/dropdown_outlined.png" Margin="8,14,0,14"/>
                            </StackPanel>
                        </MenuItem.Header>
 
                    </MenuItem>
                </Menu>
                <TextBox AcceptsReturn="True" />
            </DockPanel>

            <StackPanel x:Name="testung" Grid.Column="1" Grid.RowSpan="8" Grid.ColumnSpan="1" Orientation="Horizontal" VerticalAlignment="Top">
                <Button x:Name="btnTitle"
                        Cursor="Hand"
                        VerticalAlignment="Center"
                        HorizontalAlignment="Left"
                        FontSize="22"
                        Background="Transparent"
                        BorderThickness="0"
                        Margin="20">Payroll Management</Button>

                <Button x:Name="BtnTimesheet" 
                        Content="Timesheet"
                        Command="{Binding TimesheetCommand}"
                        Style="{StaticResource MenuButton}"
                        />

                <Button x:Name="BtnAdjustment" 
                        IsEnabled="False"
                        Content="Adjustment"
                        Style="{StaticResource MenuButton}" 
                        />
                
                <Button x:Name="BtnPayroll" 
                        IsEnabled="False"
                        Content="Payroll"
                        Command="{Binding EmployeeCommand}"
                        Style="{StaticResource MenuButton}" 
                        />

                <Button x:Name="BtnEmployee" 
                        Content="Employee"
                        Command="{Binding EmployeeCommand}"
                        Style="{StaticResource MenuButton}" 
                        />
            </StackPanel>


            <!--<Frame x:Name="frmMain" Grid.Row="2" Grid.Column="2" 
                    BorderBrush="#FF786F6F" BorderThickness="0.3" Margin="5,0,5,5" 
                    NavigationUIVisibility="Hidden"/>-->
            
            <ContentControl Content="{Binding CurrentViewModel}" 
                            Grid.Row="2" Grid.Column="2"
                            BorderBrush="#FF786F6F" BorderThickness="0.3" Margin="5,0,5,5" 
            />

        </Grid>
    </Border>
</Window>
